<script type="text/javascript">

  function runCode() {
    prGetPolicy(config.contract.ST).then();
  }

  async function prGetPolicy(contractAddress) {
    try {
      var param = {address: config.contract.PolicyRegistry, abi: abiPolicyRegistry};
      var contract = new PolicyRegistry(web3, param);
      var res  = await contract.getPolicy(contractAddress);
      var result = "result:" + res + "\n";
    } catch (e) {
      var result = "error:" + e + "\n";
    }

    setResult(result);

  }

  // var Web3 = require('web3');
  $(document).ready(function() {
    var code = runCode.toString()+"\n\n";
    code += prGetPolicy.toString() + "\n\n";
    code += "runCode();\n\n";
    setCode(code);

  });

</script>
