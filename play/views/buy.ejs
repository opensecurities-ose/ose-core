<script type="text/javascript">

  function runCode() {
    var sto = config.contract.STO, amount=web3.toWei(1,'ether');
    console.log(sto, amount);
    buy(sto, amount).then();
  }

  async function buy(sto, amount) {
    var res = getWeb3Account();
    var account = res.data;
    var result = "Account:" + account +"\n";
    if(res.code!=0) {
      result += res.msg+ '\n';
      setResult(result);
      return;
    }

    try {
      var nonce = await getWeb3Nonce(account);
      result += "Account" + nonce + "\n";
      var param = {address: sto, abi: abiSTO, sender: account, nonce: nonce};
      var sto = new STO(web3, param);
      res  = await sto.buy(amount);
      result += "tx:" + res + "\n";
    } catch (e) {
      result += "error:" + e + "\n";
    }

    setResult(result);

  }

  $(document).ready(function() {
    var code = runCode.toString() + "\n\n";
    code += buy.toString() + "\n\n";
    code += "runCode();\n\n";
    setCode(code);

  });

</script>
