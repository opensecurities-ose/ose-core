<script type="text/javascript">

  function runCode() {
    var _sto = config.contract.STO;
    var _tranche = '';
    var _paused = false;
    var now = Math.floor(new Date().getTime()/1000);
    var _startTime = now;
    var _endTime = now+3600*24*30;
    var _maxAmount = web3.toWei(1000000,'ether');
    var _rate = 10;
    var _minInvestorAmount = web3.toWei(1,'ether');
    var _maxInvestorAmount = web3.toWei(1000000,'ether');
    var _maxInvestors = 200;
    var _lockMonths = 12;

    var addresses = ['0x0000000000000000000000000000000000000000','0x866e43291293892bd0980adc4ec5166f33623d86'];
    var values = [_startTime, _endTime, _maxAmount, _rate, _minInvestorAmount, _maxInvestorAmount, _maxInvestors, _lockMonths]

    console.log(_sto, _tranche, _paused, addresses, values);
    configureSTO(_sto, '', _paused, addresses, values).then();
  }

 async function configureSTO(stoAddress, tranche, paused, addresses, values) {
    var res = getWeb3Account();
    var account = res.data;
    var result = "Account:" + account +"\n";
    if(res.code!=0) {
      result += res.msg+ '\n';
      setResult(result);
      return;
    }

    try {
      var nonce = await getWeb3Nonce(account);
      result += "nonce:" + nonce + "\n";
      var param = {address: stoAddress, abi: abiSTO, sender: account, nonce: nonce};
      var sto = new STO(web3, param);

      res  = await sto.configure(tranche, paused, addresses, values);
      result += "tx:" + res + "\n";
    } catch (e) {
      result += "error:" + e + "\n";
    }

    setResult(result);

  }

  $(document).ready(function() {
    var code = runCode.toString() + "\n\n";
    code += configureSTO.toString() + "\n\n";
    code += "runCode();\n\n";
    setCode(code);

  });

</script>
