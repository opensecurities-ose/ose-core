<script type="text/javascript">

  function runCode() {
    checkMetaMask();
  }

  function checkMetaMask() {
    var res = checkWeb3Plugin();
    var result ='';
    if(res) {
      result = "MetaMask:true\n";
    } else {
      result = "MetaMask:false\n";
    }

    setResult(result);

  }

  // var Web3 = require('web3');
  $(document).ready(function() {
    var code = runCode.toString()+"\n\n";
    code = checkWeb3Plugin.toString() + "\n\n";
    code += checkMetaMask.toString() + "\n\n";
    code += "runCode();\n\n";
    setCode(code);
    checkMetaMask();

  });

</script>
